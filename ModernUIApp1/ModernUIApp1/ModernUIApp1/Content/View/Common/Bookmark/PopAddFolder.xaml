<mui:ModernDialog x:Class="ModernUIApp1.Content.View.Common.Bookmark.PopAddFolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
    Title="Nouveau dossier" Height="270" Width="600">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="60*" />
            <RowDefinition Height="40*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="75*" />
        </Grid.ColumnDefinitions>

        <Label Content="Nom :" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,58,0,57" Width="81" Height="34" />
        <TextBox Grid.Column="1" FontSize="25" Name="nameFolder" Height="40" TextWrapping="Wrap" Text="{Binding Value}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,58,10,57" Width="424"/>
        <Button Grid.Row="1" FontSize="25" Name="ok" Content="_OK" Click="ok_click" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10,0,0" Width="265" Height="48" Grid.Column="1" />
    </Grid>
</mui:ModernDialog>

<UserControl x:Class="ModernUIApp1.Content.View.Common.Toolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d">
    <Grid Style="{StaticResource ContentRoot}" Margin="-2,-2,0,0">
            <StackPanel>
            <Expander Header="Views" ExpandDirection="Down" >
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <Label  Content="Zoom" />
                        <Slider MinWidth="100" Minimum="1880" Maximum="1918" Value="1890" Background="Transparent"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Label  Content="Luminosité" />
                        <Slider MinWidth="100" Minimum="1880" Maximum="1918" Value="1890" Background="Transparent"/>
                    </StackPanel>
                    <Button  Content="Undo" />
                    <Button  Content="Redo" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</UserControl>

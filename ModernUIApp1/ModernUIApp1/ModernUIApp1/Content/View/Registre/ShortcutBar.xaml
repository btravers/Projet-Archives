<UserControl x:Class="ModernUIApp1.Content.View.Registre.ShortcutBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d"
             FontSize="17"
             d:DesignWidth="1000">
    <Grid Style="{StaticResource ContentRoot}" Margin="-1,-1,0,0" Width="1000" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <WrapPanel Name="ShortcutWrapPanel">
            
            <Button Name="Nom" Content="Nom" Margin="10" Click="ClickShortcutName"/>
            <Button Name="Prenom" Content="Prenom" Margin="10" Click="ClickShortcutFirstName"/>
            <Button Name="Suppr" Content="Supprimer un raccourci..." Margin="10" Click="ClickDeleteShortcut"/>
            <Button Name="Ajout"  Content="Ajouter un nouveau raccourci..." Margin="10" Click="ClickAddShortcut"/>
            
            </WrapPanel>
    </Grid>
</UserControl>

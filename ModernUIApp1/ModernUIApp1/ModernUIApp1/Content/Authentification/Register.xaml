<UserControl x:Class="ModernUIApp1.Content.Identification.Register"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <Grid>
                    <Label Content="Identifiant"/>
                    <TextBox Height="23" TextWrapping="Wrap" Text="TextBox" Width="120"/>
                </Grid>
                <Grid>
                    <Label Content="Mot de passe"/>
                    <TextBox Height="23" TextWrapping="Wrap" Text="TextBox" Width="120"/>
                </Grid>
                <Grid>
                    <Label Content="Email"/>
                    <TextBox Height="23" TextWrapping="Wrap" Text="TextBox" Width="120"/>
                </Grid>
                <Button Content="S'enregistrer" Width="170"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

<UserControl x:Class="ModernUIApp1.Content.SearchImageCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400">
    <Grid Name="allGrid" Style="{StaticResource ContentRoot}">
        <Grid Name="mainGrid" Style="{StaticResource ContentRoot}">
            <Image Height="{Binding ActualHeight, ElementName=mainGrid}" Source="/Resources/mini_RMM.jpg" Margin="0,0,0,2"/>            
        </Grid>
        <Label Content="Fiche Matricule Militaire" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
    </Grid>
</UserControl>
